# Digital Twin Swap Station Sandbox - Environment Configuration
# Copy this file to .env and modify as needed

# Application
APP_NAME="Digital Twin Swap Station"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# Database (TimescaleDB)
DATABASE_URL=postgresql://swap_admin:password@localhost:5432/swap_station_twin

# Redis (for future job queue)
REDIS_URL=redis://localhost:6379/0

# Simulation Constraints
SIMULATION_MAX_DURATION_DAYS=30
SIMULATION_DEFAULT_SEED=42
SIMULATION_TIME_RESOLUTION_MS=1

# Performance
TELEMETRY_BATCH_SIZE=100
